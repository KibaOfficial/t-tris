{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": false,
    "lib": [
      "ES2017",
      "dom"
    ]
  },
  "include": ["src/**/*"]
}